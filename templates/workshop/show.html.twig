{% extends 'base.html.twig' %}

{% block title %}Workshop{% endblock %}

{% block body %}
    <h1>Workshop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workshop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ workshop.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ workshop.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ workshop.date ? workshop.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ workshop.capacity }}</td>
            </tr>
        </tbody>
    </table>

{% set registered = workshop.users.contains(app.user) %}

    {% if not registered %}
        <a href="{{ path('app_workshop_registration', {'id': workshop.id}) }}">S'inscrire</a>
    {% else %}
        <a href="{{ path('workshop_unregister', { id: workshop.id }) }}" class="btn btn-danger">Se d√©sinscrire</a>
    {% endif %}

    <a href="{{ path('app_workshop_index') }}">back to list</a>

    <a href="{{ path('app_workshop_edit', {'id': workshop.id}) }}">edit</a>

    {{ include('workshop/_delete_form.html.twig') }}
{% endblock %}
