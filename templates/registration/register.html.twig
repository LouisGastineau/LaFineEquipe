{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="container mt-5" style="max-width: 500px;">
		<h2 class="mb-4 text-center">Créer un compte</h2>

		{{ form_start(registrationForm) }}

		<div class="mb-3">
			{{ form_label(registrationForm.username) }}
			{{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control'} }) }}
			{{ form_errors(registrationForm.username) }}
		</div>

		<div class="mb-3">
			{{ form_label(registrationForm.email) }}
			{{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
			{{ form_errors(registrationForm.email) }}
		</div>

		<div class="mb-3">
			{{ form_label(registrationForm.plainPassword.first) }}
			<div class="password-wrapper input-group">
				{{ form_widget(registrationForm.plainPassword.first, {
					'attr': {'id': 'password', 'class': 'form-control'}
				}) }}
				<i class="fa-solid fa-eye toggle-eye input-group-text" onclick="togglePassword(this, 'registration_form_plainPassword_first')"></i>
			</div>
			{{ form_errors(registrationForm.plainPassword.first) }}
		</div>

		<div class="mb-3">
			{{ form_label(registrationForm.plainPassword.second) }}
			<div class="password-wrapper input-group">
				{{ form_widget(registrationForm.plainPassword.second, {
					'attr': {'id': 'confirm-password', 'class': 'form-control'}
				}) }}
				<i class="fa-solid fa-eye toggle-eye input-group-text" onclick="togglePassword(this, 'registration_form_plainPassword_second')"></i>
			</div>
			{{ form_errors(registrationForm.plainPassword.second) }}
		</div>

		<button type="submit" class="btn btn-primary w-100">S'inscrire</button>
		{{ form_end(registrationForm) }}

		<p class="mt-3 text-center">
			Vous avez déjà un compte ?
			<a href="{{ path('app_login') }}">Connectez-vous</a>
		</p>
	</div>
{% endblock %}



